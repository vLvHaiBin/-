<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.fastNews.viewGroup.noScrollViewpager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.example.fastNews.viewGroup.noScrollViewpager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#A7C1F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
     
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 首页 -->

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_news"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_tab_home_selector" />

            <TextView
                android:id="@+id/tv_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:textColor="@drawable/selector_text" />
        </LinearLayout>
        <!-- 视频 -->

        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_read"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_tab_smart_selector" />

            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读书"
                android:textColor="@drawable/selector_text" />
        </LinearLayout>
        <!-- 设置 -->

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_care"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_tab_setting_selector" />

            <TextView
                android:id="@+id/tv_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关心"
                android:textColor="@drawable/selector_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>