<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF" >

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FFF"
            android:padding="2dp"
            android:src="@drawable/mz_status_ic_notify_email_contact"
            />

        <com.example.fastNews.Utils.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#FFF"
            android:textColor="#37362F"
            android:textSize="16sp"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsIndicatorColor="#E3F2F5"
            app:pstsIndicatorHeight="32dp"
            app:pstsScaleZoomMax="0"
            app:pstsShouldExpand="false"
            app:pstsTextSelectedColor="#5BC3FE"
            app:pstsUnderlineColor="@null"
            app:pstsUnderlineHeight="0dp"
            app:pstsselectTab="0.21">
        </com.example.fastNews.Utils.PagerSlidingTabStrip>
        
        
        <ImageView
            android:id="@+id/iv_news_add"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="#FFF"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mz_ic_tab_add_normal"
            />
    </LinearLayout>

    <com.example.fastNews.viewGroup.noScrollViewpager2
        android:id="@+id/vp_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:size="9" >
    </com.example.fastNews.viewGroup.noScrollViewpager2>

</LinearLayout>