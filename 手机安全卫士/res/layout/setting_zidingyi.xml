<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/rl_item">
    	<TextView 
    	    android:id="@+id/tv_title_setting"
    	   android:layout_height="wrap_content"
    	   android:layout_width="wrap_content"
    	   android:text="自动更新设置"
    	    android:paddingLeft="10dp"
    	    android:paddingTop="5dp"
    	   android:textSize="20sp" />
    	
    	<TextView 
    	    android:id="@+id/tv_state_setting"
    	   android:layout_height="wrap_content"
    	   android:layout_width="wrap_content"
    	   android:text="自动更新关闭"
    	   android:textColor="#BBBBBB"
    	    android:layout_below="@id/tv_title_setting"
    	    android:paddingLeft="10dp"
    	   android:textSize="14sp" />
    	
   
        
        <com.example.mobilesafe.ViewGroup.ToggleButton
    	    android:id="@+id/tl_switch"
    	    android:layout_height="wrap_content"
    	    android:layout_width="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:layout_marginRight="15dp">
    	    
    	</com.example.mobilesafe.ViewGroup.ToggleButton>
    	
  
    	
    	<View 
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="10dp"
    	    android:layout_height="1dp"
    	    android:layout_width="350dp"
    	    android:background="@color/itemcolor"
    	   android:layout_below="@id/tv_state_setting"
    	  />
    	    </RelativeLayout>