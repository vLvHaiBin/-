<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/traffic_noti_liquid_icon" />

    <TextView
        android:id="@+id/tv_surplus_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/iv_image"
        android:text="剩余流量"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_flow_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_surplus_flow"
        android:layout_toRightOf="@id/iv_image"
        android:text="1.2G"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:id="@+id/tv_today_use_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="今日已用100M"
        android:textColor="#FFF"
        android:textSize="15sp" />
    
    <ImageView
        android:background="@color/itemcolor"
        android:id="@+id/v_view"
        android:layout_marginRight="5dp"
        android:layout_height="1dp"
        android:layout_width="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_today_use_flow"/>
    
     <TextView
         android:layout_marginRight="5dp"
         android:padding="5dp"
        android:id="@+id/tv_surplus_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="可用内存：346M"
        android:textColor="#FFF"
        android:textSize="15sp" 
         android:layout_below="@id/v_view"/>

</RelativeLayout>
