<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:setting="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.example.mobilesafe.ViewGroup.Titlebar 
       android:id="@+id/title_add_black"
         setting:title="添加黑名单"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
	</com.example.mobilesafe.ViewGroup.Titlebar>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="备注:"
        android:textSize="20sp"/>
    <EditText 
        android:id="@+id/et_black_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="黑名单备注"/>
  
    
</LinearLayout>
    
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="号码:"
        android:textSize="20sp"/>
    <EditText 
        android:id="@+id/et_black_number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="黑名单号码"/>
  
</LinearLayout>
    
<Button 
      android:onClick="contactChioce"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="联系人中选择"/>

<Button 
      android:onClick="affirm"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="确认"/>
    
</LinearLayout>
